<div class="container">
  <div class="background">
    <div class="row" >
      <div class="col-md-2 col-md-offset-5">
        <%= link_to "Add", new_restaurant_path, class: "btn btn-primary" %>
      </div>
    </div>

    <div class="row" >
      <div class="col-md-6 col-md-offset-3">

        <% @restaurants.each do |restaurant| %>
        <h2><%= restaurant.name %></h2>
        <p><%= restaurant.address %></p>
        <%= link_to "Delete", restaurant_path(restaurant), class: "btn btn-danger",
        method: :delete %>
        <%= link_to "Edit", edit_restaurant_path(restaurant), class: "btn btn-primary" %>
        <%= link_to "Review", new_restaurant_review_path(restaurant), class: "btn btn-primary" %>
        <%= link_to "Details", restaurant_path(restaurant), class: "btn btn-primary" %>
        <% end %>
      </div>
    </div>
  </div>
</div>

