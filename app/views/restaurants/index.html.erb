<div class="container">
<div class="col-xs-12 col-sm-10 col-sm-offset-1">
    <%= link_to "Add a new restaurant", new_restaurant_path, class: "btn btn-primary", id: "add_button" %>
    <div class="cards">
      <% @restaurants.each do |restaurant| %>
      <div class="col-xs-12 col-md-6">
        <div class="card">
          <h2><%= restaurant.name %></h2>
          <p><%= restaurant.address %></p>
          <%= link_to "Delete", restaurant_path(restaurant), class: "btn btn-danger",
          method: :delete %>
          <%= link_to "Edit", edit_restaurant_path(restaurant), class: "btn btn-primary" %>
          <%= link_to "Review", new_restaurant_review_path(restaurant), class: "btn btn-primary" %>
          <%= link_to "Details", restaurant_path(restaurant), class: "btn btn-primary" %>
        </div>
      </div>
      <% end %>
    </div>
  </div>
</div>
