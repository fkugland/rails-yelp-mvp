<div class="container">
  <div class="col-md-6 col-md-offset-3">
    <div class="row">
      <%= simple_form_for [@restaurant] do |f| %>
        <%= f.input :name %>
        <%= f.input :address %>
        <%= f.submit "Submit", class: "btn btn-primary" %>
        <%= link_to "Back to overview", restaurants_path, class: "btn btn-primary" %>
      <% end %>
    </div>
  </div>
</div>
